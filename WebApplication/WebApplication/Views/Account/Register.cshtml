@model WebApplication.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal"}))
    {
    @Html.AntiForgeryToken()
        <hr/>
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="col-md-6">
        @Html.LabelFor(m => m.Email, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
        @Html.LabelFor(m => m.Password, new {@class = "control-label"})
        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label"})
        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
        @Html.LabelFor(m => m.Gender, new {@class = "control-label"})
        @Html.DropDownListFor(m => m.Gender,
            new List<SelectListItem>
            {
                new SelectListItem {Value = "true", Text = "Мужской"},
                new SelectListItem {Value = "false", Text = "Женский"}
            },
            new {@class = "form-control"})
        @Html.ValidationMessageFor(model => model.Age, "", new {@class = "text-danger"})
        @Html.LabelFor(m => m.Name, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        @Html.LabelFor(m => m.Surname, new {@class = "control-label"})
        @Html.TextBoxFor(m => m.Surname, new {@class = "form-control"})
    </div>

        <div clas="col-md-6">
            @Html.LabelFor(model => model.Age, new {@class = "control-label"})
            @Html.EditorFor(model => model.Age, new {htmlAttributes = new {@class = "form-control"}})
            @Html.LabelFor(m => m.Country, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.Country, new {@class = "form-control"})
            @Html.LabelFor(m => m.City, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.City, new {@class = "form-control"})
            @Html.LabelFor(m => m.PhoneNumber, new {@class = "control-label"})
            @Html.TextBoxFor(m => m.PhoneNumber, new {@class = "form-control"})
            @Html.LabelFor(m => m.Avatar, new {@class = "control-label"})
            <input type="file" name="uploadImage"/>
        </div>
        <br/>
        <br/>
        <input type="submit" class="btn btn-default" style="margin-top: 15px" value="Регистрация" />
    }
</div>    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

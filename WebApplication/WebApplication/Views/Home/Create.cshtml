@model WebApplication.Models.Photo

@{
    ViewBag.Title = "Upload Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .modal-content {
        width: 600px !important;
        margin: 120px auto !important;
        margin-bottom: 0;
    }
</style>

<div class="modal-body">
    <h2>Upload Images</h2>
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(m => Model.Description, new { @class = "control-label col-sm-3" })
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control required" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="form-group">
                @Html.Label("Choose Images", new { @class = "control-label col-sm-3" })
                <input type="file" name="files"
                       multiple="multiple" accept=".jpg, .png, .gif, .jpeg" />
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" id="approve-btn" class="btn btn-primary">Save</button>
                    <div style="color: red">
                        @ViewBag.error
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>